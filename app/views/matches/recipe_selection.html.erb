<%= debug session[:match_data] %>

<div class="container">
  <div class="card-container">
    <h1>Which recipe would you like to select?</h1>
      <% @recipes.each do |recipe| %>
        <div class="card-product">
            <div class="card-category" style="background-image: url('https://images.unsplash.com/photo-1611270629569-8b357cb88da9?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
              <%= recipe.name %>
            </div>
            <div class="card-product-infos">
              <p><%=recipe.description %></p>
            </div>
            <%= form_with url: matches_path, method: :post, data: { turbo: false } do %>
              <%= hidden_field_tag :selected_recipe_id, recipe.id %>
              <%= submit_tag "Select this recipe" %>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
