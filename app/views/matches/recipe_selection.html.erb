<div data-controller="select-card" class="container">
  <div class="card-container">
    <h1>Which recipe would you like to select?</h1>
      <% @recipes.each do |recipe| %>
        <div class="card-product"
        data-select-card-target="card"
          data-id="<%= recipe.id %>"
          data-route="<%= matches_path %>"
          data-action="click->select-card#select">
            <div class="card-category" style="background-image: url('https://images.unsplash.com/photo-1611270629569-8b357cb88da9?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
              <%= recipe.name %>
            </div>
            <div class="card-product-infos">
              <p><%=recipe.description %></p>
            </div>
        </div>
      <% end %>
    </div>
  </div>
