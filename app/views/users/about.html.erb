<div class="container full-height">
<div class="card-container mt-5 mb-3">
  <h1 class="text-center mb-5"><%= @user.full_name %></h1>
  <h2 class="text-center mb-4">Saved Matches</h2>

  <div class="saved-recipe-container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 saved-recipe-list">
      <% @user.matches.each do |match| %>
        <% if match.saved? %>
          <div class="col d-flex flex-column align-items-center">
            <div class="card selectable-card w-100">
              <img src="https://images.unsplash.com/photo-1628294895950-9805252327bc?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="<%= match.recipe.name %>" class="card-img">

              <div class="recipe-name"><%= match.recipe.name %></div>

              <div class="card-body">
                <p class="card-text"><%= match.recipe.description %></p>
              </div>
              <div class="view-recipe">
              <%= link_to "View Recipe", match_path(match) %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
